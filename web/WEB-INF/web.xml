<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>com.geekon.servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>com.geekon.servlets.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearPublicacion</servlet-name>
        <servlet-class>com.geekon.servlets.CrearPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviarMensaje</servlet-name>
        <servlet-class>com.geekon.servlets.EnviarMensaje</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/InicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearPublicacion</servlet-name>
        <url-pattern>/CrearPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarMensaje</servlet-name>
        <url-pattern>/EnviarMensaje</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
